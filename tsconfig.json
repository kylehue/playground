{
   "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["ES5", "DOM"],
      "moduleResolution": "Node",
      "useDefineForClassFields": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "rootDir": ".",
      "paths": {
         "@app/*": ["./src/*"],
         "@server/*": ["./server/*"],
         "toypack": ["./node_modules/toypack/"]
      },
      "sourceMap": true,
      "outDir": "dist",
      "declaration": false,
      "noImplicitAny": false
   },
   "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
   },
   "include": ["./src/**/*.*", "./src/global.d.ts"],
}
